#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    float x, y;
    cout << "Введите X: "; cin >> x; cout << endl;
    cout << "Введите Y: "; cin >> y; cout << endl;
    float rast = sqrt(x * x + y * y);
    bool answer = ((y > 0 && x > 0 && x + y <= 2) || (!(y > 0 && x > 0) && rast <= 2));
    cout << answer;
    return 0;
}
